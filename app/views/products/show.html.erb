<h1><%= @product.name %></h1>
<h4>Brand: <%= link_to @product.brand.brand_name, brand_path(@product.brand) %></h4>
<p><%= link_to 'Edit', edit_product_path(@product) %></p>
<p><%= link_to 'Delete', @product, method: 'delete', data: { confirm: 'Product will be deleted.' }%></p>
<p><%= link_to 'Go back to all products', products_path %></p>